{
  "name": "triquetra",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "trq": "cd ./apps/triquetra-next && yarn dev",
    "build": "cd ./apps/triquetra-next && yarn build",
    "sanity": "cd ./apps/triquetra-sanity && yarn start",
    "sanity:build": "cd ./apps/triquetra-sanity && yarn sanity-build",
    "storybook": "cd ./packages/ui-components && yarn storybook",
    "storybook:build": "cd ./packages/ui-components && build-storybook",
    "types": "npx sanity-codegen",
    "lint": "cd ./apps/triquetra-next && yarn lint && cd ../triquetra-sanity && yarn lint && cd ../../packages/ui-components && yarn lint",
    "lint:fix": "cd ./apps/triquetra-next && yarn lint --fix && cd ../triquetra-sanity && yarn lint --fix && cd ../../packages/ui-components && yarn lint --fix",
    "type-check": "cd ./apps/triquetra-next && yarn type-check && cd ../../packages/ui-components && yarn type-check",
    "test": "cd ./apps/triquetra-next && yarn test",
    "test:ci": "cd ./apps/triquetra-next && yarn test:ci",
    "cypress": "cd ./apps/triquetra-next && yarn cypress",
    "cypress:headless": "cd ./apps/triquetra-next && yarn cypress:headless",
    "e2e": "cd ./apps/triquetra-next && yarn e2e",
    "e2e:headless": "cd ./apps/triquetra-next && yarn e2e:headless",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@types/node": "^16.9.1",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.0",
    "sanity-codegen": "^0.9.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "dayjs": "^1.10.7",
    "next-sanity": "^0.4.0",
    "react": "^17.0.2",
    "react-icons": "^4.3.1"
  },
  "resolutions": {
    "**/three": "0.119.1"
  }
}
