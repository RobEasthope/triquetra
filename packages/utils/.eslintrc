{
  "extends": [
    "next",
    "next/core-web-vitals",
    "wesbos/typescript"
  ],
  "rules": {
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": "warn"
  },
  "overrides": [
    {
      "files": [
        "./**/*.tsx"
      ],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    },
    {
      "files": [
        "./**/*.ts",
        "./**/*.tsx"
      ],
      "rules": {
        "@typescript-eslint/indent": "off"
      }
    }
  ],
  "ignorePatterns": [
    "/node_modules",
    "/.vercel"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "./"
        ]
      }
    }
  },
  "parserOptions": {
    "project": "../../packages/ui-components/tsconfig.json"
  }
}
